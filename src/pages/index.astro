---
import '../styles/global.css';
import Header from'../components/header.astro';
import Footer from '../components/footer.astro';
import '@fontsource-variable/roboto-mono';
const pageTitle = "Home";
const allPosts = Object.values(import.meta.glob('./posts/*.md', {eager: true}));
---

<html lang="en" style="font-family: 'Roboto Mono Variable', monospace">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body>
			<main>
				<div class="row">
					<h1><a href="/">Lyndon Saffery</a></h1>
					<Header />
				</div>
				<hr/>
					<h1>Home</h1>
						<p>Hello ðŸ‘‹! I'm Lyndon, a recent graduate and someone with deep interest in software and hardware - predominantly graphics processing and embedded computing/IoT.
						I love working on my own projects in my free time out of work and plan on documenting on them here, alongside anything else I've been doing or want to share!</p>
						<p>My socials:</p>
				<hr />
				<h2>Recent Blog Posts</h2>
				<ul>
					{allPosts.map((post: any) => <li><a href={post.url}>{post.frontmatter.title}</a></li> <p>{post.frontmatter.pubDate.toString().slice(0,10)}</p> <p><em>{post.frontmatter.description}</em></p><hr />)}
				</ul>
			</main>
		<Footer />
	</body>
</html>
