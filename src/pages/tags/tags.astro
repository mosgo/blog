---
import BaseLayout from '../../styles/BaseLayout.astro';

export async function getStaticPaths() {
      const allPosts = Object.values(import.meta.glob('../posts/*.md', { eager: true }));
  return [
    { params: { tag: "tech" }, props: {posts: allPosts}},
    { params: { tag: "personal" }, props: {posts: allPosts}},
    { params: { tag: "cars" }, props: {posts: allPosts}},
    { params: { tag: "science" }, props: {posts: allPosts}},
  ];
}

const { tag } = Astro.params;
const { posts } = Astro.props;
const filteredPosts = posts.filter((post: any) => post.frontmatter.tags?.includes(tag));
---
<BaseLayout pageTitle={tag}>
  <p>Posts tagged with {tag}</p>
  <ul>
    {filteredPosts.map((post: any) => <li><a href={post.url}>{post.frontmatter.title}</a></li>)}
  </ul>
</BaseLayout>